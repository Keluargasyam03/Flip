<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".promo.PromoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="56dp"
        android:paddingHorizontal="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:textAlignment="center"
            android:text="Hemat  banyak lewat promo menarik!"
            android:fontFamily="@font/inter_bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:id="@+id/title"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_promo_tag"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            android:id="@+id/iv_promo"
            android:layout_marginStart="42dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_misi"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:id="@+id/iv_misi"
            android:layout_marginEnd="42dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_promo"
            app:layout_constraintStart_toStartOf="@id/iv_promo"
            app:layout_constraintEnd_toEndOf="@id/iv_promo"
            android:fontFamily="@font/inter_medium"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:id="@+id/tv_promo"
            android:text="promo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_misi"
            app:layout_constraintStart_toStartOf="@id/iv_misi"
            app:layout_constraintEnd_toEndOf="@id/iv_misi"
            android:fontFamily="@font/inter_medium"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:id="@+id/tv_misi"
            android:text="misi" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_rounded_eeecec_8dp"
            android:fontFamily="@font/inter_thin"
            android:hint="@string/text_promo"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:paddingTop="10dp"
            android:paddingBottom="2dp"
            android:paddingStart="2dp"
            android:id="@+id/et_promo"
            app:layout_constraintTop_toBottomOf="@id/tv_promo"
            tools:layout_editor_absoluteX="30dp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="cari"
            android:gravity="center"
            android:fontFamily="@font/inter_medium"
            android:textSize="12sp"
            android:textColor="#8A000000"
            app:layout_constraintTop_toTopOf="@id/et_promo"
            app:layout_constraintEnd_toEndOf="@id/et_promo"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@id/et_promo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_rounded_eeecec_8dp"
            android:drawableStart="@drawable/ic_game"
            android:drawablePadding="8dp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Voucher"
            android:textSize="12sp"
            android:id="@+id/card_voucher"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/et_promo"
            tools:layout_editor_absoluteX="30dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/card_voucher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/card_cashback"
            android:background="@drawable/bg_rounded_eeecec_8dp"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Casback 5% s.d. Rp.7.500"
                android:fontFamily="@font/inter_semibold"
                android:textSize="12sp"
                android:id="@+id/tv1"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanpa min.transaksi"
                android:fontFamily="@font/inter_medium"
                android:textSize="12sp"
                android:id="@+id/tv2"
                android:layout_marginTop="8dp"
                android:layout_below="@id/tv1"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="berakhir 22 juni 2024"
                android:fontFamily="@font/inter_medium"
                android:textSize="12sp"
                android:id="@+id/tv3"
                android:layout_marginTop="8dp"
                android:layout_below="@id/tv2"
                android:textColor="@color/black" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingTop="2dp"
                android:paddingHorizontal="12dp"
                android:text="pakai"
                android:fontFamily="@font/inter_medium"
                android:textSize="12sp"
                app:cornerRadius="6dp"
                android:layout_marginEnd="26dp"
                android:includeFontPadding="false"
                app:backgroundTint="#EF6F12"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_rounded_eeecec_8dp"
            android:drawableStart="@drawable/ic_qris_2"
            android:drawablePadding="8dp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Qris"
            android:textSize="12sp"
            android:id="@+id/card_qris"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/card_cashback"
            tools:layout_editor_absoluteX="30dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/card_qris"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/card_cashback_2"
            android:background="@drawable/bg_rounded_eeecec_8dp"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Casback 25% s.d.Rp.5000"
                android:fontFamily="@font/inter_semibold"
                android:textSize="12sp"
                android:id="@+id/tv4"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanpa min.transaksi"
                android:fontFamily="@font/inter_medium"
                android:textSize="12sp"
                android:id="@+id/tv5"
                android:layout_marginTop="8dp"
                android:layout_below="@id/tv4"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="berakhir 25 juni 2024"
                android:fontFamily="@font/inter_medium"
                android:textSize="12sp"
                android:id="@+id/tv6"
                android:layout_marginTop="8dp"
                android:layout_below="@id/tv5"
                android:textColor="@color/black" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingTop="2dp"
                android:paddingHorizontal="12dp"
                android:text="pakai"
                android:fontFamily="@font/inter_medium"
                android:textSize="12sp"
                app:cornerRadius="6dp"
                android:layout_marginEnd="26dp"
                android:includeFontPadding="false"
                app:backgroundTint="#EF6F12"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_rounded_eeecec_8dp"
            android:drawableStart="@drawable/ic_rek_wallet"
            android:drawablePadding="8dp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Rekening  Bank &amp; E-Wallet"
            android:textSize="12sp"
            android:id="@+id/card_rekening"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/card_cashback_2"
            tools:layout_editor_absoluteX="30dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/card_rekening"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/card_cashback_3"
            android:background="@drawable/bg_rounded_eeecec_8dp"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cashback 20% s.d.Rp.10.000"
                android:fontFamily="@font/inter_semibold"
                android:textSize="12sp"
                android:id="@+id/tv7"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanpa min.transaksi"
                android:fontFamily="@font/inter_medium"
                android:textSize="12sp"
                android:id="@+id/tv8"
                android:layout_marginTop="8dp"
                android:layout_below="@id/tv7"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="berakhir 30 juni 2024"
                android:fontFamily="@font/inter_medium"
                android:textSize="12sp"
                android:id="@+id/tv9"
                android:layout_marginTop="8dp"
                android:layout_below="@id/tv8"
                android:textColor="@color/black" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingTop="2dp"
                android:paddingHorizontal="12dp"
                android:text="pakai"
                android:fontFamily="@font/inter_medium"
                android:textSize="12sp"
                app:cornerRadius="6dp"
                android:layout_marginEnd="26dp"
                android:includeFontPadding="false"
                app:backgroundTint="#EF6F12"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_rounded_eeecec_8dp"
            android:drawableStart="@drawable/ic_tagihan_card"
            android:drawablePadding="8dp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Top up &amp; Tagihan"
            android:textSize="12sp"
            android:id="@+id/card_topup"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/card_cashback_3"
            tools:layout_editor_absoluteX="30dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/card_topup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/card_cashback_4"
            android:background="@drawable/bg_rounded_eeecec_8dp"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="isi pulsa &amp; bayar tagihan untuk menang ipad\nair 5!"
                android:fontFamily="@font/inter_semibold"
                android:textSize="12sp"
                android:id="@+id/tv10"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanpa min.transaksi"
                android:fontFamily="@font/inter_medium"
                android:textSize="12sp"
                android:id="@+id/tv11"
                android:layout_marginTop="8dp"
                android:layout_below="@id/tv10"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="berakhir 30 juni 2024"
                android:fontFamily="@font/inter_medium"
                android:textSize="12sp"
                android:id="@+id/tv12"
                android:layout_below="@id/tv11"
                android:textColor="@color/black" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>